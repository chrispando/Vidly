@model IEnumerable<Vidly.Models.Customer>

<h2>Customers</h2>

@if(!Model.Any()){
    <p>We don't have any customers yet.</p>
}
else{
<table class = "table table-striped">
    <thead>
        <tr>
            <th>Customer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model){
            <tr>
                <td>
                    <a asp-controller="Customers"
                        asp-action = "Detail"
                        asp-route-id="@customer.Id">
                        @customer.Name
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
