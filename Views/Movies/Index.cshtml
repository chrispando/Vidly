@model IEnumerable<Vidly.Models.Movie>

    <h2>Movies</h2>

@if(!Model.Any()){
    <p>We don't have any movies yet.</p>
}
else{
<table class = "table table-striped">
    <thead>
        <tr>
            <th>Movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model){
            <tr>
                <td>
                    <a asp-controller="Movies"
                        asp-action = "Detail"
                        asp-route-id="@movie.Id">
                        @movie.Name
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
}